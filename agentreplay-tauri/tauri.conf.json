{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Agent Replay Alpha",
  "version": "0.1.1-alpha",
  "identifier": "io.agentreplay.desktop",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "cd ../agentreplay-ui && npm run build",
    "frontendDist": "../agentreplay-ui/dist",
    "devUrl": "http://localhost:47173"
  },
  "app": {
    "security": {
      "csp": {
        "default-src": "'self'",
        "script-src": "'self' https://us.posthog.com https://us.i.posthog.com https://us-assets.i.posthog.com https://eu.posthog.com https://eu.i.posthog.com https://eu-assets.i.posthog.com",
        "style-src": "'self' 'unsafe-inline'",
        "img-src": "'self' data: blob: https:",
        "font-src": "'self' data:",
        "connect-src": "'self' ipc: http://ipc.localhost http://127.0.0.1:* http://localhost:* ws://127.0.0.1:* ws://localhost:* https://api.openai.com https://api.anthropic.com https://us.posthog.com https://us.i.posthog.com https://us-assets.i.posthog.com https://eu.posthog.com https://eu.i.posthog.com https://eu-assets.i.posthog.com https://app.posthog.com",
        "frame-src": "'none'",
        "object-src": "'none'"
      },
      "capabilities": [
        {
          "identifier": "main",
          "description": "Capabilities for Agentreplay main window",
          "windows": [
            "main"
          ],
          "permissions": [
            "core:default",
            "core:window:allow-minimize",
            "core:window:allow-maximize",
            "core:window:allow-toggle-maximize",
            "core:window:allow-close",
            "core:window:allow-start-dragging",
            "shell:allow-open",
            "fs:default",
            "fs:allow-read",
            "fs:allow-write",
            "dialog:default",
            "notification:default",
            "os:default"
          ]
        }
      ]
    },
    "windows": [
      {
        "label": "main",
        "title": "Agent Replay (Alpha)",
        "width": 1440,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 700,
        "center": true,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "visible": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "category": "DeveloperTool",
    "copyright": "2025 Agentreplay Contributors",
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "libgtk-3-0"
        ]
      },
      "appimage": {
        "bundleMediaFramework": false
      },
      "rpm": {
        "depends": [
          "webkit2gtk4.1",
          "gtk3"
        ]
      }
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "externalBin": [],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "longDescription": "Agentreplay is a high-performance AgentFlow format database for AI observability and analytics. Track, analyze, and optimize your AI agents with temporal graph storage and advanced querying capabilities.",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null,
      "minimumSystemVersion": "10.13"
    },
    "resources": [],
    "shortDescription": "AgentFlow Database for AI Observability"
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/agentreplay/agentreplay/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDRGRjk3QThFQjQ5RjZCQUIKUldTcmE1KzBqbnI1VDZaNlZVK0w0NlVEcThVNmJYWlNpNS9SdHlUdlk3QmhyY2h0UHQzRHRLcnYK"
    }
  }
}