[package]
name = "{{plugin_id}}"
version = "0.1.0"
edition = "2021"
description = "{{description}}"
authors = ["{{author}}"]
license = "Apache-2.0"

[lib]
crate-type = ["cdylib"]

[dependencies]
vizu-plugin-sdk = "0.1"
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"

[profile.release]
opt-level = "s"
lto = true
