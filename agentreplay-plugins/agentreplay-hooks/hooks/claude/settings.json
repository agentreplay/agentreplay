{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "agentreplay-hook context --platform claude",
            "timeout": 10
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "agentreplay-hook session-init --platform claude",
            "async": true
          }
        ]
      },
      {
        "matcher": "Bash|Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"[$(date -Iseconds)] File modification detected\" >> /tmp/agentreplay_file_changes.log",
            "async": true
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "agentreplay-hook observation --platform claude",
            "async": true
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"[$(date -Iseconds)] Command executed\" >> /tmp/agentreplay_bash_history.log",
            "async": true
          }
        ]
      }
    ],
    "PostUserMessage": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "agentreplay-hook user-message --platform claude",
            "async": true
          }
        ]
      }
    ],
    "OnThought": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "agentreplay-hook thought --platform claude",
            "async": true
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "agentreplay-hook summarize --platform claude",
            "async": true
          }
        ]
      }
    ]
  }
}
